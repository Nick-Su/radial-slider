{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "./dist",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@types/*": ["types/*"],
    },
  },
   "include": ["src", "src/types"]
}
